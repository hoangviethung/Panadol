block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
	body
		#fb-root
		#loading
			.logo-loader
				img(src="./assets/images/icons/loading.svg", alt="")
			.progstat-wrapper Loading:
				span#progstat 0
				| %
			#progress
		block header
			include _header.pug
		main
			block main
			#js-page-verify(class=bodyClass hidden)
		block footer
			include _footer.pug
		.overlay
		a.d-none#fancyboxOninit(data-fancybox href="#myVideo")
			video#myVideo(controls data-width="100%" data-height="100%")
				source(src="assets/videos/video.mp4")
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		block scripts